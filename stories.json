import express from "express";
import fs from "fs";
import path from "path";
import bodyParser from "body-parser";

const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(bodyParser.json());
app.use(bodyParser.urlencoded({ extended: true }));

// Serve frontend (public folder)
app.use(express.static(path.join(process.cwd(), "public")));

// Stories storage file
const STORIES_FILE = path.join(process.cwd(), "stories.json");

// Helper function to read stories
function readStories() {
  try {
    const data = fs.readFileSync(STORIES_FILE, "utf-8");
    return JSON.parse(data);
  } catch (err) {
    return [];
  }
}

// Helper function to write stories
function writeStories(stories) {
  fs.writeFileSync(STORIES_FILE, JSON.stringify(stories, null, 2));
}

// Get all stories
app.get("/api/stories", (req, res) => {
  const stories = readStories();
  res.json(stories);
});

// Save a new story
app.post("/api/stories", (req, res) => {
  const { title, content } = req.body;
  if (!title || !content) {
    return res.status(400).json({ error: "Title and content are required" });
  }

  const stories = readStories();
  const newStory = { id: Date.now(), title, content };
  stories.push(newStory);
  writeStories(stories);

  res.status(201).json(newStory);
});

// Start server
app.listen(PORT, () => {
  console.log(`Server running on http://localhost:${PORT}`);
});
